<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Sack Of Food</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        @*<a href="/Home/Index">
            <img src="~/Images/logo.png" width="100" height="100" />

        </a>*@

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                
                <div class="navbar-header">
                
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                  

                    @if (User.Identity.IsAuthenticated)
                    {

                        if (System.Security.Claims.ClaimsPrincipal.Current.IsInRole("3"))
                        {
                                @Html.ActionLink("Sack Of Food", "Index", "Customer", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        if (System.Security.Claims.ClaimsPrincipal.Current.IsInRole("2"))
                        {
                                @Html.ActionLink("Sack Of Food", "Index", "RestaurantOwner", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        if (System.Security.Claims.ClaimsPrincipal.Current.IsInRole("1"))
                        {
                                @Html.ActionLink("Sack Of Food", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    }




                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        @if (User.Identity.IsAuthenticated)
                        {

                            if (System.Security.Claims.ClaimsPrincipal.Current.IsInRole("3"))
                            {
                                    <li>@Html.ActionLink("Home", "Index", "Customer")</li>
                                    <li>@Html.ActionLink("My Orders", "ListOrders", "Customer")</li>
                                    <li>@Html.ActionLink("Profile", "Profile", "Auth")</li>
                            }

                            if (System.Security.Claims.ClaimsPrincipal.Current.IsInRole("2"))
                            {
                                    <li>@Html.ActionLink("Orders", "", "")</li>
                                    <li>@Html.ActionLink("My Restaurant", "Details", "Restaurants")</li>
                                    <li>@Html.ActionLink("Foods", "", "")</li>
                                    <li>@Html.ActionLink("Profile", "Profile", "Auth")</li>
                            }
                            if (System.Security.Claims.ClaimsPrincipal.Current.IsInRole("1"))
                            {
                                    <li>@Html.ActionLink("Requests", "ListRequests", "Admin")</li>
                                    <li>@Html.ActionLink("Restaurants", "ListRestaurants", "Admin")</li>
                                    <li>@Html.ActionLink("Users", "ListUsers", "Admin")</li>
                                    <li>@Html.ActionLink("Profile", "Profile", "Auth")</li>
                            }
                        }


                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Logout", "Auth")">Logout</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Register", "Auth")">Register</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - Sack Of Food</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>
