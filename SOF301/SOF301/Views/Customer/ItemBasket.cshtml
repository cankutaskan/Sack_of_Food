@model IEnumerable<SOF301.Models.OrderItems>
@Styles.Render("/Content/css")

<div class="panel panel-info">
    <div class="panel-heading">Food Sack</div>
    <div class="panel-body">

        @{
            if (Model != null && Model.Any())
            {
                double count = 0;
                foreach (var item in Model)
                {


                    <ul class="list-group">

                        <li>
                            <div class="name">
                                <div class="remove" style="float:left;">
                                    <span class="glyphicon glyphicon-remove" style="margin-left:-30px;"></span>

                                    <span class="hidenID">@item.FoodID</span>

                                </div>
                                @Html.DisplayFor(modelItem => item.Foods.Name)

                            </div>
                           

                        </li>


                    </ul>


                      count += (double)item.Foods.Price;

                }


                @Html.Display("Total Cost");
                <p>Total Cost: @count</p>
                        @Html.ActionLink("Continue to Payment", "Payment")<br />

                        <a href="#" class="clearBasket">Clear Basket</a>
            }
            else
            {
                <p> No item on your basket</p>

            }

        }



    </div>
</div>

<div class="basket">


</div>

<script>
    $(document).ready(function () {
        $(".hidenID").hide();


    });



</script>
<style>
    ul {
        list-style-type: none;
    }
    .name{
        position:relative;
        left:50px;


    }
    
</style>


