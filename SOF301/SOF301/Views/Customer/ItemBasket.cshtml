@model IEnumerable<SOF301.Models.OrderItems>
@*@Styles.Render("/Content/RestaurantPage.css")*@



    <div class="basket">

    @{
        if (Model!=null && Model.Any())
        {
            foreach (var item in Model)
            {


                <ul class="list-group">

                    <li>@Html.DisplayFor(modelItem => item.Foods.Name)</li>


                </ul>


            }
            @Html.ActionLink("Continue to Payment", "Payment")
        }
        else
        {
            <p> No item on your basket</p>

        }
    }
</div> 