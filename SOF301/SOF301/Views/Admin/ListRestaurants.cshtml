@model IEnumerable<SOF301.Models.Restaurants>

@{
    ViewBag.Title = "ListRestaurants";
}

<h2>ListRestaurants</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cities.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Districts.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishingHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantStatu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cities.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Districts.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartingHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinishingHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantStatu)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteRestaurant", new { id=item.RestaurantID })
        </td>
    </tr>
}

</table>
